{
  "name": "dev-journal",
  "version": "1.0.0",
  "description": "Dev Journal - это персональный блог, который предназначен для публикации статей, постов, новостей автором или авторами.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --fix",
    "build": "tsc",
    "start": "nodemon build/index.js",
    "server:start": "concurrently \" npm run build \" \"npm run start\"",
    "server:watch": "nodemon --watch \"**\" --ext \"ts,json\" --ignore \"**/*.spec.ts\" --exec \"ts-node index.ts\"",
    "migration:gen": "npx typeorm-ts-node-esm migration:generate ./database/migrations/${MIG_NAME} -d data-source.ts",
    "migration:add": "typeorm migration:create ./database/migrations/${MIG_NAME}",
    "migration:run": "npx typeorm-ts-node-esm migration:run -d data-source.ts",
    "migration:back": "typeorm migration:revert -d data-source.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ITSerafim/dev-journal.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ITSerafim/dev-journal/issues"
  },
  "homepage": "https://github.com/ITSerafim/dev-journal#readme",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.16"
  }
}
